# Makefile for Saturnin & PRESENT S-box BCT generator

PYTHON := python3
SCRIPT := saturnin_bct.py

.PHONY: all run lint clean help

all: run

## Run the BCT generator
run:
	@echo "ğŸš€ Running Boomerang Connectivity Table generator..."
	@$(PYTHON) $(SCRIPT)

## Check code style (optional)
lint:
	@echo "ğŸ” Checking code style with flake8..."
	@flake8 $(SCRIPT) || echo "âš ï¸  Install flake8 with: pip install flake8"

## Remove cache and temporary files
clean:
	@echo "ğŸ§¹ Cleaning up..."
	@rm -rf __pycache__ .pytest_cache *.pyc

## Display available commands
help:
	@echo ""
	@echo "Available Make targets:"
	@echo "  make run     â€“ Run the BCT generator"
	@echo "  make lint    â€“ Run flake8 linter (if installed)"
	@echo "  make clean   â€“ Remove cache files"
	@echo "  make help    â€“ Show this help message"
	@echo ""
